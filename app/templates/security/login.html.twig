{% extends 'main.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
{% endblock %}

{% block page_title %}
    {{ include('_partials/page_title.html.twig', {'title': 'Connexion à votre espace membre'}) }}
{% endblock %}


{% block body %}
    <div id="main-wrapper" class="layout-main-wrapper clearfix">
        <div id="main" class="container">
            <div class="row row-offcanvas row-offcanvas-left clearfix">
                <main class="main-content col" id="content" role="main">
                    <section class="section">
                        <div class="col-sm-12 col-lg-6 m-auto">
                            <div class="row px-3 py-5">
                                <div class="col-sm-12 col-xl-12 m-auto">
                                    <!-- Form START -->
                                    <form method="post">
                                        {% if error %}
                                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                        {% endif %}

                                        <!-- Email -->
                                        <div class="mb-4">
                                            <label for="exampleInputEmail1" class="form-label">Votre adresse email *</label>
                                            <div class="input-group input-group-lg">
                                                <span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="fa fa-at"></i></span>
                                                <input type="email" name="email" value="{{ last_username }}" class="form-control" placeholder="E-mail" id="exampleInputEmail1" required>
                                            </div>
                                        </div>
                                        <!-- Password -->
                                        <div class="mb-4">
                                            <label for="inputPassword5" class="form-label">Mot de passe *</label>
                                            <div class="input-group input-group-lg">
                                                <span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="fa fa-lock"></i></span>
                                                <input type="password" name="password" class="form-control" placeholder="password" id="inputPassword" required>
                                            </div>
                                            <div id="passwordHelpBlock" class="form-text">
                                                Votre mot de passe doit contenir au minimum 8 charactères
                                            </div>
                                        </div>
                                        <!-- Check box -->
                                        <div class="mb-4 d-flex justify-content-between mb-4">
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                                <label class="form-check-label" for="exampleCheck1">Se souvenir de moi</label>
                                            </div>
                                            <div class="text-primary-hover">
                                                <a href="" class="text-secondary">
                                                    <u>Mot de passe oublié ?</u>
                                                </a>
                                            </div>
                                        </div>
                                        <!-- Button -->
                                        <div class="align-items-center mt-0">
                                            <div class="d-grid">
                                                <button class="button btn-lg btn btn-primary form-control" type="submit">Connexion</button>
                                            </div>
                                        </div>
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                    </form>
                                    <!-- Form END -->
                                    <!-- Sign up link -->
                                    <div class="mt-4 text-center">
                                        <span>Vous n'avez pas encore de compte? <a class="text-black-50"  href="{{ path('register') }}">Créer un compte</a></span>
                                    </div>
                                </div>
                            </div> <!-- Row END -->
                        </div>
                    </section>
                </main>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
<script type="text/javascript">
   jQuery(document).ready(function ($) {
    });
</script>
{% endblock %}