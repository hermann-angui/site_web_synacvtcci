{% extends 'admin/base.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <style>
        .head {
            background-color: #ffd4f9;
            color: #000000;
        }
        #top-row .form-check-input {
            width: 1.2em;
            height: 1.2em;
            margin-top: 0.4em;
        }

        .form-check-input:checked[type=radio] {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20'%3e%3cpath fill='none' stroke='%23fff' stroke-linecap='round' stroke-linejoin='round' stroke-width='3' d='M6 10l3 3l6-6'/%3e%3c/svg%3e")
        }

        .form-label, .col-form-label, .form-check-label {
            font-size: 14px;
        }

        .form-check-input {
            width: 0.85em;
            height: 0.85em;
            margin-top: 0.4em;
        }

        .form-check-input:checked {
            background-color: #101011;
            border-color: #000000;
        }

        .form-check-input:focus {
            border-color: none;
            outline: 0;
            box-shadow: none;
        }

        .form-check-input[type=radio] {
            border-radius: 0.2em;
        }

        input[type="text"],input[type="number"] {
            border: 0;
            border-bottom: 1px dashed #000;
            background-color: #f4f5f8;
            height: 2em;
        }

        .form-control:focus {
            background-color: #f4f5f8;
            border-color: #000;
            outline: 0;
            box-shadow: none;
        }

        .page-header {
            height: 160px !important;
        }
    </style>
{% endblock %}


{% block body %}
    <!-- <body data-layout="horizontal" data-topbar="dark"> -->

    <!-- Begin page -->
    <div id="layout-wrapper">


        {{ include('admin/_partials/header.html.twig') }}

        <!-- ========== Left Sidebar Start ========== -->
        {{ include('admin/_partials/left-sidebar.html.twig')}}
        <!-- Left Sidebar End -->


        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="card">
                                <div class="card-body border-bottom">
                                    <div class="d-flex justify-content-end">
                                        <div class="flex-shrink-0">
                                            {% if member is not null %}
                                                <a href="{{ path('admin_download_cnmci_pdf', {id: member.id}) }}" class="btn btn-success btn-sm waves-effect waves-light" ><span class="fa fa-eye fa-1x"></span>Télécharger le pdf</a>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h4 class="card-title mb-4">Editer le formulaire de la chambre de métiers</h4>
                                    {{ include('admin/member/_form_cnmci.html.twig', {'button_label': 'Mettre à jour'}) }}

                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- container-fluid -->
            </div><!-- End Page-content -->

            {{ include('admin/_partials/footer.html.twig') }}
        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->

    <!-- Right Sidebar -->

    <!-- /Right-bar -->

    <!-- Right bar overlay-->
    <div class="rightbar-overlay"></div>

{% endblock %}

{% block javascript %}
{{ parent() }}
  <script src="{{ asset('assets/frontend/js/jquery/jquery.min.js') }}"></script>
  <script src="{{ asset('assets/admin/libs/inputmask/dist/jquery.inputmask.bundle.min.js') }}"></script>
  <script src="{{ asset('assets/admin/libs/inputmask/dist/jquery.inputmask.bundle.min.js') }}"></script>
  <script src="{{ asset('assets/admin/libs/jquery.form/jquery.form.min.js') }}"></script>
  <script>
      $('document').ready(function() {

          $(".input-mask").inputmask();

         $('#form_artisan_cnmcci').ajaxForm({
            url: "{{ path('ajax_register_artisan', {step: 1}) }}",
            dataType: 'json',
            type: 'POST',
            success: function(response) {
                console.log(response);
                console.log("{{ path('register_artisan', {step: 2}) }}");
               // window.location.replace("{{ path('register_artisan', {step: 2}) }}");
                window.location.href = "{{ path('register_artisan', {step: 2}) }}";
            },
            error: function(xhr, textStatus, errorThrown) {
              console.log(xhr.responseText);
            }
         });
          $("#member_registration_photo").change(function(data){
              var imageFile = data.target.files[0];
              var reader = new FileReader();
              reader.readAsDataURL(imageFile);

              reader.onload = function(evt){
                  $('#imagePreview').attr('src', evt.target.result);
                  $('#imagePreview').fadeIn(650);
              }
          });

          var children = [];
          $("input[name='is_married']").change(function(){
             if($(this).val() === "0"){
                $('#partner_bock').hide();
             }else{
                  $('#partner_bock').show();
             }
          });
          $("input[name='has_child']").change(function(){
              if($(this).val() === "0"){
                  $('#child-row').hide();
              }else{
                  $('#child-row').show();
              }
          });
          $( "#step1" ).click(function() {
              //close accordion 1 and open accordion 3
              $("#collapseOne, #collapseTwo").collapse('toggle');
              $( "#documents").focus();
           });
          $( "#step2" ).click(function() {
              //close accordion 1 and open accordion 3
              $("#collapseTwo, #collapseThree").collapse('toggle');
              $( "#info_familiales").focus();
           });

          $('#newChild').click(function(){
            var row = "<div class='d-flex justify-content-between w-75'><label class='py-2'>Nom <input type='text' name='child_firstname[]' value='' class='form-control' /></label><label class='my-2'>Prénoms <input type='text' name='child_lastname[]' value='' class='form-control' /></label><label class='my-2'>Sexe <input type='text' name='child_sex[]' value='' class='form-control' /></label></div>";
            $('#children_bock').append(row);
          });

      });
  </script>
{% endblock %}


