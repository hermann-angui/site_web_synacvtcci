{% extends 'admin/base.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <style>
        .card-body{
            border: 2px solid #f8f8fb;
            cursor: pointer;
        }
        .card-body:hover {
            border: 2px solid #556ee6;
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Begin page -->
            <div class="container">
                <div class="d-flex py-4">
                    <a href="{{ path('admin_index')}}" class="btn btn-primary waves-effect waves-light">Revenir à l'accueil</a>
                </div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="card card-body d-flex align-items-center">
                            <div class="d-flex flex-column justify-content-center align-items-center">
                                <h2 class="card-title mb-2">PAYEMENT EFFECTUE AVEC SUCCES</h2>
                                <img src="{{ asset('assets/admin/images/success.gif') }}" alt="" width="80" height="80">
                                <p class="card-text text-center py-3">Votre paiement de <strong>{{ payment.montant }}</strong> CFA a été effectué avec succès.</p>
                            </div>
                            <br>
                            <div class="row mt-4">
                                <div class="col-lg-6 col-md-6">
                                    <div>
                                        <a class="btn btn-sm btn-success" href="{{ path('download_payment_receipt_carte_synacvtcci_pdf', {id: payment.id}) }}"><i class="fa fa-download">Télécharger mon reçu</i></a>
                                    </div>
                                    <div>
                                        <object data="{{ asset('members/') }}{{ payment.paymentFor.reference }}/{{ payment.paymentFor.paymentReceiptCarteSynacvitciPdf }}" type="application/pdf" style="width:100%;height:500px; margin-top: 20px;">
                                            <p>Impossible d'afficher un aperçu du recu. <a href="/members/{{ payment.paymentFor.reference }}/{{ payment.paymentFor.paymentReceiptCarteSynacvitciPdf }}"> Télécharger</a></p>
                                        </object>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="mb-3">
                                        <a class="btn btn-sm btn-success" href="{{ asset('members/') }}{{ payment.paymentFor.reference }}/{{ payment.paymentFor.cardPhoto }}" download><i class="fa fa-download"> Télécharger la carte</i></a>
                                    </div>
                                    <img src="{{ asset('members/') }}{{ payment.paymentFor.reference }}/{{ payment.paymentFor.cardPhoto }}" alt="Avatar" class="w-100">
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script type="text/javascript">
        jQuery(document).ready(function ($) {

        });
    </script>
{% endblock %}
