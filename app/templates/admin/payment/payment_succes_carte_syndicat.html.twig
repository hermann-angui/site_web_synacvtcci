{% extends 'admin/base.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <style>
        .card-body{
            border: 2px solid #f8f8fb;
            cursor: pointer;
        }
        .card-body:hover {
            border: 2px solid #556ee6;
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Begin page -->
    <div id="layout-wrapper">
        {{ include('admin/_partials/simple-header.html.twig') }}
            <div class="page-content">
                <div class="container">
                    <div class="d-flex justify-content-center align-items-center align-content-center mt-5">
                        <div class="col-lg-8">
                            <div class="card card-body d-flex align-items-center">
                                    <h2 class="card-title mb-2">PAYEMENT EFFECTUE AVEC SUCCES</h2>
                                    <img src="{{ asset('assets/admin/images/success.gif') }}" alt="" width="150" height="150">
                                <p class="card-text fs-5 text-center py-3">Votre paiement de <strong>{{ payment.montant }}</strong> CFA a été effectué avec succès.</p>
                                <div class="d-flex py-4">
                                    <a href="{{ path('admin_index')}}" class="btn btn-primary waves-effect waves-light">Revenir à l'accueil</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-8 col-md-8">
                            <div>
                                <a style="margin-bottom: 10px; border-radius:5px; padding:10px 10px; background-color: #21a103; color:#fff; width: auto; height: 20px;" href="{{ path('download_payment_receipt_carte_synacvtcci_pdf', {id: payment.id}) }}"><i class="fa fa-download">Télécharger mon reçu</i></a>
                            </div>
                            <div>
                                <object data="{{ asset('members/') }}{{ payment.paymentFor.reference }}/{{ payment.paymentFor.paymentReceiptCarteSynacvitciPdf }}" type="application/pdf" style="width:100%;height:1000px; margin-top: 20px;">
                                    <p>Impossible d'afficher un aperçu du recu. <a href="/members/{{ payment.paymentFor.reference }}/{{ payment.paymentFor.paymentReceiptCarteSynacvitciPdf }}">Télécharger</a></p>
                                </object>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <img src="{{ asset('members/') }}{{ member.reference }}/{{ member.cardPhoto }}" alt="Avatar" class="w-75">
                        </div>
                    </div>
                </div>
            </div>
    </div>

{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script type="text/javascript">
        jQuery(document).ready(function ($) {

        });
    </script>
{% endblock %}
