{% extends 'frontend/base.html.twig' %}

{% block title %}Accueil - SYNACVTCCI{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    <link href="{{ asset('assets/admin/css/app.min.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('assets/admin/libs/select2/css/select2.min.css') }}" type="text/css" rel="stylesheet">

    <style>
        .card-header {
            padding: 0;
        }

        .accordion-button {
            background-color: #fff;
            color: #222;
            font-size: 13px;
            line-height: 28px;
            letter-spacing: -.5px;
            font-weight: 500;
            text-transform: capitalize;
            border: 1px solid #eee;
            padding: 3px 3px;
        }

        .card-body {
            padding: 0.2rem 0.2rem;
        }

        .accordion-body {
            padding: 0.5rem 0.75rem;
        }

        .form-control:focus {
            border-color: 0;
            box-shadow: none;
        }

        .wizard .steps > ul > li a {
            font-size: 12px;
            font-weight: bold;
            color: #000000;
        }

        .form-control, .form-select {
            padding: 0.275rem 0.55rem;
            font-size: 0.95rem;
            border-radius: 0rem;
        }

        .form-control:focus, .form-select:focus {
            outline: 0;
            box-shadow: none;
            border-color: #0701b9;
        }

        .col-form-label {
            padding-top: calc(0.375rem + 1px);
            padding-bottom: calc(0.375rem + 1px);
            margin-bottom: 0;
            font-size: 0.95rem;
            line-height: 1.5;
        }

        .form-check-label {
            font-size: 0.82rem;
        }

        .form-check-input {
            margin-top: 0.4em;
        }

        #field {
            margin-left: .5em;
            float: left;
        }

        #field, label {
            float: left;
            font-family: Arial, Helvetica, sans-serif;
            font-size: small;
        }

        br {
            clear: both;
        }

        input {
            border: 1px solid black;
            margin-bottom: .5em;
        }

        input.error {
            border: 1px solid red;
        }

        label.error {
            padding-left: 0px;
            margin-left: 0em;
        }

        label.valid {
            display: block;
            width: 16px;
            height: 16px;
        }

        .select2 {
            min-width: 200px;
        }

        .select2 span.select2-selection__rendered,
        li.select2-results__option {
            font-size: 0.75rem;
        }

        .select2-container--default .select2-results__option--highlighted[aria-selected] {
            background-color: #0701b9;
            font-size: 0.75rem;
        }

        input.select2-search__field {
            border: 1px solid black;
            margin-bottom: 0.0em;
        }

        @media (max-width: 768px) {
            .page-header-info h2 {
                font-size: 26px;
                line-height: 36px;
            }
        }

        label.required:after {
            content: " *";
            color: red;
        }

        .select2-container .select2-selection--single {
            height: 32px;
        }

        .select2-container--default .select2-selection--single {
            background-color: #fff;
            border: 1px solid #ced4da;
            border-radius: 0px;
        }
    </style>
