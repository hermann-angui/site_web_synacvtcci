{% extends 'frontend/base.html.twig' %}

{% block title %}Accueil - SYNACVTCCI{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    <link href="{{ asset('assets/admin/css/app.min.css') }}" type="text/css" rel="stylesheet">

    <style>
        .card-header {
            padding: 0;
        }
        .accordion-button {
            background-color: #fff;
            color: #222;
            font-size: 13px;
            line-height: 28px;
            letter-spacing: -.5px;
            font-weight: 500;
            text-transform: capitalize;
            border: 1px solid #eee;
            padding: 3px 3px;
        }
        .card-body {
            padding: 0.2rem 0.2rem;
        }

        .accordion-body {
            padding: 0.5rem 0.75rem;
        }

        .form-control:focus {
            border-color: 0;
            box-shadow: none;
        }

        .wizard .steps>ul>li a{
            font-size: 10px;
            font-weight: bolder;
        }
        .form-control, .form-select {
            padding: 0.275rem 0.55rem;
            font-size: 0.78rem;
        }
        .form-control:focus {
            border-color: none;
            outline: 0;
            box-shadow: none;
        }
        .col-form-label {
            padding-top: calc(0.375rem + 1px);
            padding-bottom: calc(0.375rem + 1px);
            margin-bottom: 0;
            font-size: 0.82rem;
            line-height: 1.5;
        }
        .form-check-label{
            font-size: 0.82rem;
        }

        .form-check-input {
            margin-top: 0.4em;
        }

        #field { margin-left: .5em; float: left; }
        #field, label { float: left; font-family: Arial, Helvetica, sans-serif; font-size: small; }
        br { clear: both; }
        input { border: 1px solid black; margin-bottom: .5em;  }
        input.error { border: 1px solid red; }
        label.error {
            padding-left: 0px;
            margin-left: 0em;
        }
        label.valid {
            display: block;
            width: 16px;
            height: 16px;
        }
    </style>
{% endblock %}

{% block body %}

    {{ include('frontend/_partials/header.html.twig') }}


    <section class="page-header">
        <div class="page-header-shape"></div>
        <div class="container">
            <div class="page-header-info">
                <h4>Formulaire d'adhésuion!</h4>
                <h2>Remplissez le formulaire d'adhésion et rejoignez la <span>SYNACVTCCI!</span></h2>
