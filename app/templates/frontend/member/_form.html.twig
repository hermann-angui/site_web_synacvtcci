{{ form_start(form) }}
    <div class="row pb-3">
        <label for="member_registration_photo" class="d-block d-flex justify-content-center align-content-center">
            <div>
                <img id="imagePreview" src="{{ asset('assets/images/avatar/avatar.jpg') }}" alt="" width="100" class="rounded-circle">
                <span class="d-block position-relative text-white" style="top:-40px;left:32px"><i class="mdi mdi-camera mdi-36px"></i></span>
                {{ form_widget(form.photo, {'attr': {'class': 'visually-hidden'}}) }}
            </div>
        </label>
    </div>

    <div class="card accordion my-3" id="info_perso">
        <div class="card-header accordion-item accordion-header" id="headingOne">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                1 - INFORMATIONS PERSONNELLES
            </button>
        </div>
        <div id="collapseOne" class="card-body accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#info_perso">
            <div class="accordion-body">
                {{ form_row(form.email) }}
                {{ form_row(form.titre) }}
                {{ form_row(form.sex) }}
                {{ form_row(form.lastName) }}
                {{ form_row(form.firstName) }}
                {{ form_row(form.company) }}
                {{ form_row(form.nationality) }}
                {{ form_row(form.whatsapp) }}
                {{ form_row(form.date_of_birth) }}
                {{ form_row(form.birth_city) }}
                {{ form_row(form.country) }}
                {{ form_row(form.city) }}
                {{ form_row(form.commune) }}
                {{ form_row(form.quartier) }}
                {{ form_row(form.mobile) }}
                {{ form_row(form.phone) }}
                <div class="d-flex justify-content-end">
                    <span class="btn-primary btn default-btn" id="step1"> Etape suivante</span>
                </div>
            </div>
        </div>
    </div>

    <div class="card accordion my-3" id="documents">
        <div class="card-header accordion-item accordion-header" id="headingTwo">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="true" aria-controls="collapseOne">
                2-DOCUMENTS
            </button>
        </div>
        <div id="collapseTwo" class="card-body accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#documents">
            <div class="accordion-body">
                {{ form_row(form.IdType) }}
                {{ form_row(form.IdNumber) }}
                {{ form_row(form.photoPieceFront) }}
                {{ form_row(form.photoPieceBack) }}
                <hr class="my-2">
                {{ form_row(form.drivingLicenseNumber) }}
                {{ form_row(form.photoPermisFront) }}
                {{ form_row(form.photoPermisBack) }}
                <div class="d-flex justify-content-end">
                    <span class="btn-primary btn default-btn" id="step2"> Etape suivante</span>
                </div>
            </div>
        </div>
    </div>

    <div class="card accordion my-3" id="info_familiales">
        <div class="card-header accordion-item accordion-header" id="headingThree">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="true" aria-controls="collapseOne">
                3-INFORMATIONS FAMILIALES
            </button>
        </div>
        <div id="collapseThree" class="card-body accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#info_familiales">
            <div class="accordion-body">
                <div class="py-3">
                    Etes-vous marié ? &nbsp;&nbsp;
                    <input type="radio" name="is_married" value="0" checked /> Non &nbsp;&nbsp;
                    <input type="radio" name="is_married" value="1"/> Oui
                    <div id="partner_bock" style="display:none;" class="my-3">
                        {{ form_row(form.partner_first_name) }}
                        {{ form_row(form.partner_last_name) }}
                    </div>
                </div>

                <div class="py-3">
                    Avez-vous un/des enfant(s) ? &nbsp;&nbsp;
                    <input type="radio" name="has_child" value="0" checked /> Non &nbsp;&nbsp;
                    <input type="radio" name="has_child" value="1"/> Oui
                    <br>
                    <div id="children_bock" class="pt-2">
                        <button id="newChild" class="btn btn-small btn-rounded btn-primary" data-bs-toggle="modal" data-bs-target="#enfantModal" data-bs-whatever="@mdo"><i class="fa fa-plus fa-1x"></i> Ajouter un enfant </button>
                    </div>
                </div>

             </div>
        </div>
    </div>

    <div class="d-flex justify-content-center align-items-center">
        <a href="{{ path('home') }}" class="btn btn-primary w-50 default-btn bg-info">{{ button_label|default('Fermer') }}</a> &nbsp;&nbsp;
        <button class="btn btn-primary w-50 default-btn">{{ button_label|default('Enregistrer') }}</button>
    </div>

    <div class="modal fade" id="enfantModal" tabindex="-1" aria-labelledby="enfantModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="Nom">Enregister un enfant</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="recipient-name" class="col-form-label">Nom:</label>
                            <input type="text" class="form-control" id="child_first_name" name="child_first_name" />
                        </div>
                        <div class="mb-3">
                            <label for="message-text" class="col-form-label">Prénoms:</label>
                            <input type="text" class="form-control" id="child_last_name" name="child_last_name" />
                        </div>
                        <div class="mb-3">
                            <label for="sex" class="col-form-label">Sexe:</label>
                            <select class="form-select" name="sex">
                                <option value="" selected></option>
                                <option value="Masculin">Masculin</option>
                                <option value="Feminin">Feminin</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary default-btn" data-bs-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-primary default-btn" id="addChildBtn">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>

{{ form_end(form) }}
